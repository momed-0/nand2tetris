/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    // Put your code here:
   Mux(a=out1,b=in,sel=load,out=regin);
   DFF(in=regin,out=out,out=out1);
}
